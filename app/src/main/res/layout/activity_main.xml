<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/rock">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgPiedra"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/piedra"
            android:contentDescription="Piedra" />

        <ImageView
            android:id="@+id/imgPapel"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/papel"
            android:contentDescription="Papel" />

        <ImageView
            android:id="@+id/imgTijera"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/tijera"
            android:contentDescription="Tijera" />

    </LinearLayout>



    <ImageView
        android:id="@+id/imgResultado"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="Resultado" />

    <TextView
        android:id="@+id/txtResultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorFondo"
        android:textColor="@color/colorTexto"
        android:textSize="21sp"
        android:text="Resultado" />



</LinearLayout>